<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">
    <schema id="org.gnome.shell.extensions.managers.panel"
        path="/org/gnome/shell/extensions/managers/panel/">

        <key type="b" name="debug">
            <default>false</default>
            <summary>Debug panel manager</summary>
            <description>
                Show debug messages
            </description>
        </key>

        <key type="s" name="panels-configurations">
            <default>"{}"</default>
            <summary>Panel configurations</summary>
            <description>
                List panels and their layouts
            </description>
        </key>

        <key type="s" name="layouts-configurations">
            <default>"{}"</default>
            <summary>Layout configurations</summary>
            <description>
                List layouts and their elements such as menus, indicators, spaces
            </description>
        </key>

        <key type="s" name="indicators-configurations">
            <default>"{}"</default>
            <summary>Indicator configurations</summary>
            <description>
                List indicators with configurations
            </description>
        </key>

    </schema>
</schemalist>
